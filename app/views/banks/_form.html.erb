<div class="container">
  <% if @bank.errors.any? %>
    <h2><%= t('not_saved_msg') %></h2>
    <ul>
      <% @bank.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @bank,class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of the bank" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :code, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :code, class: "form-control shadow rounded", placeholder: "Code of the bank" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :nit, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :nit, class: "form-control shadow rounded", placeholder: "Identifier number of the bank" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col text-center">
      <%= link_to '[ Cancel and return to index page ]', banks_path, class: "text-info" %>
    </div>
  </div>
</div>