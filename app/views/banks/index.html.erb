<h2>Index of banks</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Nit</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.name %></td>
        <td><%= bank.code %></td>
        <td><%= bank.nit %></td>
        <td><%= link_to 'Show', bank_path(bank) %></td>
        <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
        <td><%= link_to 'Delete', bank_path(bank), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Create new bank', new_bank_path %>
</p>