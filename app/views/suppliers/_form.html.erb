<div class="container">
  <div class="container">
    <% if @supplier.errors.any? %>
      <h2><%= t('not_saved_msg') %></h2>
      <ul>
        <% @supplier.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="justify-content-center">
      <%= form_with(model: @supplier,class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group row">
          <div class="col-2">
            <%= f.label :name, class: "col-form-label text-light" %>
          </div>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of the supplier" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-2">
            <%= f.label :nit, class: "col-form-label text-light" %>
          </div>
          <div class="col-10">
            <%= f.text_field :nit, class: "form-control shadow rounded", placeholder: "Identifier number of the supplier" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-2">
            <%= f.label :contact_name, class: "col-form-label text-light" %>
          </div>
          <div class="col-10">
            <%= f.text_field :contact_name, class: "form-control shadow rounded", placeholder: "Contact name of the supplier" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-2">
            <%= f.label :contact_phone, class: "col-form-label text-light" %>
          </div>
          <div class="col-10">
            <%= f.text_field :contact_phone, class: "form-control shadow rounded", placeholder: "Contact phone of the supplier" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-2">
            <%= f.label :bank_id, class: "col-form-label text-light" %>
          </div>
          <div class="col-10">
            <%= f.collection_select(:bank_id, Bank.all, :id, :name, { prompt: true }, { class: 'form-control shadow rounded' }) %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-2">
            <%= f.label :account_number, class: "col-form-label text-light" %>
          </div>
          <div class="col-10">
            <%= f.text_field :account_number, class: "form-control shadow rounded", placeholder: "Bank account number" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col text-center">
      <%= link_to '[ Cancel and return to index page ]', suppliers_path, class: "text-info" %>
    </div>
  </div>
</div>